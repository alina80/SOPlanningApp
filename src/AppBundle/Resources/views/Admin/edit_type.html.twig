{% extends "::admin.html.twig" %}

{% block title %}Edit Type{% endblock %}

{% block body %}
    <div class="row mt-4">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <legend>Edit User Type</legend>
            <div class="{% if (errors ?? [])  %}alert-danger{% endif %}">
                {{ (errors ?? []) | join(',') }}
            </div>
            <form action="{{ path('app_admin_savetype',{id:type.id}) }}" method="post">
                <div class="form-group">
                    <label for="userTypeDescription">Description</label>
                    <input type="text" class="form-control" id="userTypeDescription" name="description"
                           value="{{ type.description }}" placeholder="Enter user type description">
                </div>
                <div class="form-group">
                    <label for="userType">Type</label>
                    <input type="text" class="form-control" id="userType" name="type"
                           value="{{ type.type }}" placeholder="Enter user type">
                </div>

                <button type="submit" class="btn btn-outline-primary">Edit</button>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="row mt-3">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <button class="btn btn-outline-danger">
                <a href="{{ path('app_admin_deletetype',{id:type.id}) }}">Delete</a>
            </button>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}