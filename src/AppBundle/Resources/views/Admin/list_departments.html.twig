{% extends "::admin.html.twig" %}

{% block title %}UsersList{% endblock %}

{% block body %}
    <div class="row mt-4">
        <div class="col-4">
            <button class="btn btn-outline-primary">
                <a href="{{ path('app_admin_adddepartment') }}">Add Department</a>
            </button>
        </div>
        <div class="col-4"></div>
        <div class="col-4"></div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Department Name</th>
                    <th colspan="2" width="10%">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% set i = 1 %}
                {% for department in departments %}

                    <tr>
                        <th scope="row">{{ i }}</th>
                        <td>{{ department.description }}</td>
                        <td>
                            <a href="{{ path('app_admin_editdepartment',{id:department.id}) }}" class="text-success"><i class="fa fa-edit"></i> </a>
                        </td>
                        <td>
                            <a href="{{ path('app_admin_deletedepartment',{id:department.id}) }}" class="text-danger"><i class="fa fa-times"></i> </a>
                        </td>
                    </tr>
                    {% set i = i + 1 %}
                {% endfor %}

                </tbody>
            </table>

        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-12">
            <span class="text-danger">{{ message }}</span>
        </div>
    </div>

{% endblock %}
