{% extends "::users.html.twig" %}

{% block title %}Add Appointment{% endblock %}

{% block body %}
    <div class="row my-4">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <legend>Make appointment</legend>
            <form action="{{ path('app_appointment_saveappointment') }}" method="post">

                <legend>Select date</legend>
                <div class="col">
                    <label for="selectDate">Date</label>
                    <input type="date"  class="form-control" name="date" id="selectDate">
                </div>

                <legend>Select interval</legend>
                <div class="row mb-2">
                    <div class="col">
                        <label for="startHour">Start Hour</label>
                        <input type="time"  class="form-control" name="start" id="endHour">
                    </div>
                    <div class="col">
                        <label for="endHour">End Hour</label>
                        <input type="time" class="form-control" name="end" id="endHour">
                    </div>
                </div>
                <div class="form-group">
                    <label for="taskDescription">Appointment details</label>
                    <textarea class="form-control" id="taskDescription" name="description" placeholder="Appointment details"></textarea>
                </div>
                <div class="form-group">
                    <label for="taskNotes">Notes</label>
                    <input type="text" class="form-control" id="taskNotes" name="note" placeholder="Notes">
                </div>
                <div class="form-group">
                    <label for="statusType">Select status</label>
                    <select class="form-control" id="statusType" name="status">
                        <option>-- Select status --</option>
                        {% for status in statuses %}
                            <option value="{{ status.id }}">
                                {{ status.description }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="btn btn-outline-primary">Add</button>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>

{% endblock %}
