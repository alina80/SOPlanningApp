{% extends '::users.html.twig' %}
{% block body %}
    <div class="row mt-4">
        <div class="col-md-3">
            Welcome {{ user }}
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-2">
            <legend>Select date</legend>
            <form action="{{ path('app_default_selectdate') }}" method="post">
           <!--     <div class="form-group">
                    <label>Data</label>
                    <input type="date" name="data">
                </div> -->
               <div class="form-group">
                    <label>Day</label>
                    <input type="number" name="day" min="1" max="31" step="1" class="form-control">
                </div>
                <div class="form-group">
                    <label>Month</label>
                    <input type="number" name="month" min="1" max="12" step="1" class="form-control">
                </div>
                <div class="form-group">
                    <label>Year</label>
                    <input type="number" name="year" min="2020"  step="1" class="form-control">
                </div>
                <button type="submit" class="btn btn-outline-primary"> Select</button>
            </form>
        </div>
        <div class="col-md-8">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Description</th>
                    <th scope="col">Notes</th>
                    <th scope="col">Status</th>
                </tr>
                </thead>
                <tbody>
                {% set hour = 8 %}
                {% for hour in range(8,20) %}
                <tr>
                    <th scope="row"><a href="{{ path('app_appointment_addappointment') }}"> {{ hour }}:00 - {{ hour + 1 }}:00</a></th>
                    <td> - </td>
                    <td> - </td>
                    <td> - </td>
                </tr>
                {% set hour = hour + 1 %}
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-2">
            <a href="{{ path('app_appointment_addappointment') }}">Make appointment <i class="fa fa-arrow-right"></i> </a>
        </div>
    </div>
{% endblock %}